{% extends 'base.html.twig' %}
{% block navbar %}{% endblock %}
{% block header %}{% endblock %}

{% block body %}
<link href="{{ asset('css/login.css') }}" rel="stylesheet">
    <div class="container">
        <div class="row" style="margin-top:50px;">
        <div class="col-md-5 ms-auto me-auto text-center">
            <img src="{{ asset('img/Logo Avis-officiels.com.png') }}" style="width:200px;height:80px;">
        </div>
        </div>
        <div class="row">
            <div class="col-md-5 style_col_login ms-auto me-auto">
                    <h3>Connectez votre marque</h3>
                    <p>Connectez-vous à l'aide de l'identifiant que vous avez reçu après votre incription. </p>
                     <b class="">Adresse email</b>
                    {{ form_start(form.email) }}
                    {{ form_widget(form.email) }} <br><br>
                     <b class="">Mot de passe</b>
                    {{ form_start(form.password) }}
                    {{ form_widget(form.password) }} <br><br>
                    <button type="submit" class="btn btn_styles">SE CONNECTER</button>
                    {{ form_end(form) }}
            </div>
        </div> <br>
    </div>
{% endblock %}
{% block footer %}{% endblock %}