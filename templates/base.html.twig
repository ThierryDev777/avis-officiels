<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="icon" type="image/jpg" href="{{ asset('img/favicon.jpeg') }}" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg bg-light navbar_shadow">
                <div class="container">
                    {% block logo %}
                    {% endblock %}
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="{{ path('avis', { 'marque': app.request.get('marque') }) }}">Rédiger un avis &nbsp;&nbsp;</a> 	
                            </li>
                            <li class="nav-item">
                                <a class="btn btn_style_avis" href="{{ path('login_marque') }}">Se connecter</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        {% block header %}
            <div class="header">
                <div class="row">
                    <div class="col-md-6 ms-auto me-auto col-header">
                        {% block title_header %}{% endblock %}
                    </div>
                </div>
            </div> <br><br>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <br>
            <div class="footer">
                <div class="row">
                    <div class="col-md-4 ms-auto me-auto text-center">
                        <img src="{{ asset('img/logo-avis-officiels-footer.png') }}" style="width:200px;height:100px;"><br>
                        <a href="https://www.avis-officiels.com/mentions-legales" style="text-decoration:none">Mention légales</a> <br>
                        Copyright 2023 © Tous droits réservés 
                    </div>
                </div>
            </div>
        {% endblock %}
    </body>
</html>
